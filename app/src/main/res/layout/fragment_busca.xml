<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".hashtags.BuscaFragment"
    android:id="@+id/fragmentBusca"
    android:weightSum="1"
    android:showDividers="middle"
    android:divider="@drawable/list_divider">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.29">

        <EditText
            android:layout_width="236dp"
            android:layout_height="match_parent"
            android:id="@+id/editText"
            android:layout_gravity="center" />

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/botaoVoltarFragmentBusca"
                android:background="@null"
                android:src="@drawable/leftarrowsmallred"
                android:layout_gravity="center" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="87dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center_vertical">

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:id="@+id/botaoBuscaFragment"
                android:src="@drawable/searchiconred"
                android:layout_gravity="center_horizontal|bottom" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="472dp"
        android:layout_gravity="center_horizontal">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/listaCardsBusca"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal|bottom"></ListView>
    </FrameLayout>

</LinearLayout>